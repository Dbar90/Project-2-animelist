<%- include('./partials/header.ejs') %>
  <div class="container">
    <h1>My Favorite Anime!</h1>
    <ul class="list-unstyled">
        <% for (let i = 0; i < anime.length; i++) { %>
      <li class="favanime">
        <a class="list-group-item" href="/anime/<%=anime[i].id%>"><%=anime[i].name%></a>
        <div class="btn-toolbar" role="toolbar group">
        <form action="/anime/<%= anime[i].id%>?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-secondary" value="Delete">
        </form>
        <a href="/anime/<%=anime[i].id%>/edit"><input type="submit" class="btn btn-secondary" value="Modify"></a>
        </div>
      </li>
      <br>
      <% } %>
    </ul>
    </div>
  </body>
</html>
